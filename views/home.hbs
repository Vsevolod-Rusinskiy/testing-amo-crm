              <div class="child">{{separatePriceWithSpace price}} ‚ÇΩ</div>
            </div>

            <div class="row item contacts visible">
              {{#each _embedded.contacts}}

              <div class="child name-cell">

                <i class="fa-regular fa-user"></i>
                <div>
                  {{name}}
                </div>
                {{#if phone}}
                <span class="separator"> | </span>
                <span class="tag"><a href="tel:{{phone}}"><i class="fa-solid fa-phone"></i></a></span>
                {{/if}}
                {{#if email}}
                <span class="separator"> | </span>
                <span class="tag"><a href="mailto:{{email}}"><i class="fa-solid fa-envelope"></i></a></span>
                {{/if}}
              </div>

              {{/each}}
