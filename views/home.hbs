<html lang="en">

  <head>
      <script src="https://use.fontawesome.com/0fe1a5afde.js"></script>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{title}}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;800&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/style-dist.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css" integrity="sha512-xh6O/CkQoPOWDdYTDqeRdPCVd1SpvCA9XXcUnZS2FmJNp1coAFzvtCN9BmamE+4aHK8yyUHUSCcJHgXloTyT2A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
  </head>

  <body>
    <section>
      <main>
        <div class="wrapper">
          <div class="search-pannel">
            <div class="title">Пример тестового задания<span><i class="fa-thin fa-circle-user"></i></span></div>
            <div class="search">
              <input type="text" placeholder="Поиск сделок" />
            </div>
          </div>
          <div class="table">
            <div class="content">
              <div class="head item">
                <div class="first-cell hidden">+</div>
                <div class="second-cell" >Название</div>
                <div class="child">Статус</div>
                <div class="child">Ответственный</div>
                <div class="child">Дата создания</div>
                <div class="child">Бюджет</div>
              </div>
            {{#each data}}
              <div class="row item">
                <div class="first-cell"><span>+</span></div>
                <div class="second-cell">{{name}}</div>
                <div class="child">Статус</div>
                <div class="child"><i class="fa-regular fa-user"></i>{{responsible_user_id}}</div>
                <div class="child">Дата создания</div>
                <div class="child">{{price}} ₽</div>
              </div>
            {{/each}} 
            </div>
          </div>

        </div>
      </main>
    </section>
    {{! <script src="script.js"></script> }}
    
  </body>
</html>

