                  <span class="separator"> | </span>
                  <span class="tag">{{name}}</span>
                  {{/each}}
                </div>

              </div>

              {{!-- ////////// --}}

              {{#if firstContact}}
              <div class="child"><span class="status first-contact">{{status_id}}</span></div>
              {{/if}}
              {{#if negotiation}}
              <div class="child"><span class="status negotiation">{{status_id}}</span></div>
              {{/if}}
              {{#if decisions}}
              <div class="child"><span class="status decisions">{{status_id}}</span></div>
              {{/if}}
              {{#if agreement}}
              <div class="child"><span class="status agreement">{{status_id}}</span></div>
              {{/if}}


              {{!-- ////////// --}}

              <div class="child">
                <i class="fa-regular fa-user"></i>
                <div> {{responsible_user_id}}</div>
              </div>
